{
    "name": "gb/lesson1",
    "autoload": {
        "psr-4": {
            "GB\\HomeTask\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GB\\HomeTask\\UnitTests\\": "tests/"
        }
    },

    "authors": [
        {
            "name": "Margarita Samoray",
            "email": "msamoray161@gmail.com"
        }
    ],
    "require": {
        "fakerphp/faker": "^1.20",
        "symfony/polyfill-uuid": "^1.26",
        "psr/container": "^2.0",
        "vlucas/phpdotenv": "^5.4",
        "monolog/monolog": "^3.2",
        "symfony/console": "^6.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "test": "phpunit tests --testdox --colors",
        "http-server": "php -S 127.0.0.1:8000 http.php",
        "test-coverage": "php -dxdebug.mode=coverage vendor/bin/phpunit tests --coverage-html coverage_report --coverage-filter src"
    }

}
